                <div class="container-fluid px-4">
                    <h1 class="mt-4">Manage Employee</h1>
                    <ol class="breadcrumb mb-4">
                        <li class="breadcrumb-item active">Dashboard</li>
                    </ol>
                    <div class="row">
                        <div class="col-xl-3 col-md-6">
                            <div class="card bg-primary text-white mb-4">
                                <div class="card-body">Primary Card</div>
                                <div class="card-footer d-flex align-items-center justify-content-between">
                                    <a class="small text-white stretched-link" href="#">View Details</a>
                                    <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                                </div>
                            </div>
                        </div>
                        <div class="col-xl-3 col-md-6">
                            <div class="card bg-warning text-white mb-4">
                                <div class="card-body">Warning Card</div>
                                <div class="card-footer d-flex align-items-center justify-content-between">
                                    <a class="small text-white stretched-link" href="#">View Details</a>
                                    <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                                </div>
                            </div>
                        </div>
                        <div class="col-xl-3 col-md-6">
                            <div class="card bg-success text-white mb-4">
                                <div class="card-body">Success Card</div>
                                <div class="card-footer d-flex align-items-center justify-content-between">
                                    <a class="small text-white stretched-link" href="#">View Details</a>
                                    <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                                </div>
                            </div>
                        </div>
                        <div class="col-xl-3 col-md-6">
                            <div class="card bg-danger text-white mb-4">
                                <div class="card-body">Danger Card</div>
                                <div class="card-footer d-flex align-items-center justify-content-between">
                                    <a class="small text-white stretched-link" href="#">View Details</a>
                                    <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                                </div>
                            </div>
                        </div>
                    </div>





                    <div class="card mb-4">
                        <div class="card-header">
                            <i class="fas fa-table me-1"></i>
                            Employee List
                        </div>
                        <div class="card-body">
                            <table class="table table-striped table-bordered" id="datatablesSimple">
                                <thead class="thead-light">
                                    <tr>
                                        <th>ID</th>
                                        <th>Full Name</th>
                                        <th>Email</th>
                                        <th>Gender</th>
                                        <th>Mobile</th>
                                        <th>DOB</th>
                                        <th>Role</th>
                                        <th>Status</th>
                                        <th>Delete</th>
                                    </tr>
                                </thead>
                                
                                <tfoot>
                                    <tr>
                                        <th>ID</th>
                                        <th>Full Name</th>
                                        <th>Email</th>
                                        <th>Gender</th>
                                        <th>Mobile</th>
                                        <th>DOB</th>
                                        <th>Role</th>
                                        <th>Status</th>
                                        <th>Delete</th>
                                    </tr>
                                </tfoot>
                                <tbody>
                                    <% for(let row of userDetails) { %>
                                        <tr>

                                            <td>
                                                <%= row._id%>
                                            </td>
                                            <td>
                                                <%= row.full_name%>
                                            </td>
                                            <td>
                                                <%= row.email%>
                                            </td>
                                            <td>
                                                <%= row.gender%>
                                            </td>
                                            <td>
                                                <%= row.phone_number%>
                                            </td>
                                            <td>
                                                <%= row.dob%>
                                            </td>
                                            <td>
                                                <%= row.role%>
                                            </td>

                                            <% if (row.status) { %>
                                                <td><a href="update_user_status?s=block&regId=<%= row._id%>"
                                                        style="color:orangered;font-weight: bold;">Block</a></td>
                                                <%} else { %>
                                                    <td><a href="update_user_status?s=verify&regId=<%= row._id%>"
                                                            style="color:green;font-weight: bold;">Verify</a></td>
                                                    <% } %>
                                                        <td><a href="update_user_status?s=delete&regId=<%= row._id%>"
                                                                style="color:red;font-weight: bold;">Delete</a></td>

                                                        <% }%>
                                        </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

    <style>
        body {
            min-height: 100vh;
        }

        .task-container {
            max-width: 500px;
            margin: 0 auto;
            background: linear-gradient(45deg, #ff8a00, #e52e71);
            padding: 20px;
            margin-top: 100px;
            border-radius: 10px;
        }

        .task-number {
            font-size: 14px;
            padding: 5px;
            margin-right: 10px;
        }

        .task-title {
            font-weight: bold;
        }

        .task-description {
            font-size: 14px;
            margin-bottom: 5px;
        }
    </style>


    <div class="container">
        <div class="task-container">
           
            <div class="form-group">
                <label for="taskInput">Task:</label>
                <input type="text" id="taskInput" class="form-control" placeholder="Enter task...">
            </div>
            <div class="form-group">
                <label for="descriptionInput">Description:</label>
                <textarea id="descriptionInput" class="form-control" rows="3" placeholder="Enter task description..."></textarea>
            </div>
            <div class="form-group">
                <label for="statusSelect">Status:</label>
                <select id="statusSelect" class="form-control">
                    <option value="pending">Pending</option>
                    <option value="inprogress">In Progress</option>
                    <option value="completed">Completed</option>
                </select>
            </div>
            <div class="form-group">
                <label for="dateInput">Date:</label>
                <input type="text" id="dateInput" class="form-control">
            </div>
            <button class="btn btn-primary btn-block" type="button" onclick="addTask()">Add Task</button>
            
            <h3 class="mt-4">Task List:</h3>
            <ul id="taskList" class="list-group mt-3"></ul>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/js/all.min.js"></script>
    
    <script>
        var taskList = document.getElementById("taskList");
        var taskCounter = 0;

        // Function to create a new task item
        function createTaskItem(taskText, description, status, date) {
            taskCounter++;

            var li = document.createElement("li");
            li.className = "list-group-item d-flex justify-content-between align-items-center";
            
            var taskContainer = document.createElement("div");
            
            var taskNumber = document.createElement("span");
            taskNumber.className = "task-number badge badge-secondary badge-pill";
            taskNumber.textContent = taskCounter;
            taskContainer.appendChild(taskNumber);
            
            var taskTitle = document.createElement("span");
            taskTitle.className = "task-title ml-2";
            taskTitle.textContent = taskText;
            taskContainer.appendChild(taskTitle);
            
            var taskDescription = document.createElement("p");
            taskDescription.className = "task-description mb-0";
            taskDescription.textContent = description;
            taskContainer.appendChild(taskDescription);
            
            li.appendChild(taskContainer);

            var deleteButton = document.createElement("button");
            deleteButton.className = "delete-button btn btn-danger btn-sm";
            deleteButton.innerHTML = '<i class="fas fa-trash"></i>';
            deleteButton.addEventListener("click", function() {
                li.remove();
            });

            var editButton = document.createElement("button");
            editButton.className = "edit-button btn btn-primary btn-sm mx-2";
            editButton.innerHTML = '<i class="fas fa-edit"></i>';
            editButton.addEventListener("click", function() {
                var updatedTaskText = prompt("Enter the updated task:", taskText);
                if (updatedTaskText !== null && updatedTaskText.trim() !== "") {
                    taskTitle.textContent = updatedTaskText;
                }
            });

            li.appendChild(deleteButton);
            li.appendChild(editButton);

            return li;
        }

        // Function to add a task to the list
        function addTask() {
            var taskInput = document.getElementById("taskInput");
            var descriptionInput = document.getElementById("descriptionInput");
            var statusSelect = document.getElementById("statusSelect");
            var dateInput = document.getElementById("dateInput");

            var taskText = taskInput.value.trim();
            var description = descriptionInput.value.trim();
            var status = statusSelect.value;
            var date = dateInput.value;

            if (taskText !== "") {
                var newTask = createTaskItem(taskText, description, status, date);
                taskList.appendChild(newTask);
                taskInput.value = "";
                descriptionInput.value = "";
                statusSelect.value = "pending";
                dateInput.value = "";
            }
        }

        // Initialize the date picker
        $(document).ready(function() {
            $('#dateInput').datepicker({
                format: 'yyyy-mm-dd',
                autoclose: true
            });
        });
    </script>


